    }

    a:hover, a:link, a:visited {
      text-decoration: none;
      outline: none;
      background: transparent;
    }

    .article {
      margin-top: 20px;
    }

    .article-heading {
      display: flex;
      /*height: 40px;*/
      font-size: 1.2em;
      background: #104E8B;
      border-top-left-radius: 5px;
      border-top-right-radius: 5px;
      color: white;
      padding: 5px 10px;
      font-family: Helvetica, Arial, sans-serif;
    }

    .article-title {
      display: flex;
      width: 350px;
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
    }

    .article-icon {
      margin-left: 55%;
      margin-top: 15px;
      color: white;
      display: flex;
    }

    .article-body {
      border: 1px solid #104E8B;
      height: 80px;
      line-height: 60px;
      padding: 10px 15px;
      font-family: quendamedium;
      font-size: 1.3em;
    }

    .article-footer {
      border-bottom-left-radius: 5px;
      border-bottom-right-radius: 5px;
      border: 1px solid #104E8B;
      margin-top: -1px;
      display: flex;
      padding: 5px 10px;
    }

    .left-footer {
      margin-top: 10px;
      font-size: 1.4em;
      width: 400px;
    }

    .left-footer > p {
      cursor: pointer;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      max-width: 50px;
    }

    .right-footer {
      margin-top: 10px;
      margin-left: 30%;
    }
  </style>
</head>
